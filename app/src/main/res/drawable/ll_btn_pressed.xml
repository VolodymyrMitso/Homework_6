    <item>
        <shape
            android:shape="rectangle">
            <size android:height="@dimen/d_size_1dp" />
            <size android:width="@dimen/d_size_1dp" />
            <solid android:color="@color/c_btn1" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape
                android:shape="rectangle" >
                <size android:height="@dimen/d_size_1dp" />
                <size android:width="@dimen/d_size_1dp" />
                <solid android:color="@color/c_btn3" />
            </shape>
        </rotate>
    </item>


</layer-list>